@model Prueba002.Models.dbModels.Album

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro de que quieres eliminar el artista?</h3>
<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreAlbum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreAlbum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FotoAlbum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FotoAlbum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdArtistaNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdArtistaNavigation.IdArtista)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdGeneroNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdGeneroNavigation.IdGenero)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdAlbum" />
        <input type="submit" value="Delete" class="btn btn-danger" /> <br />
        <a class="btn btn-info" asp-action="Index">Volver a la lista</a>
    </form>
</div>

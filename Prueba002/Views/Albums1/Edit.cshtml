@model Prueba002.Models.dbModels.Album

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAlbum" />
            <div class="form-group">
                <label asp-for="NombreAlbum" class="control-label"></label>
                <input asp-for="NombreAlbum" class="form-control" />
                <span asp-validation-for="NombreAlbum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGenero" class="control-label"></label>
                <select asp-for="IdGenero" class="form-control" asp-items="ViewBag.IdGenero"></select>
                <span asp-validation-for="IdGenero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdArtista" class="control-label"></label>
                <select asp-for="IdArtista" class="form-control" asp-items="ViewBag.IdArtista"></select>
                <span asp-validation-for="IdArtista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoAlbum" class="control-label"></label>
                <input asp-for="FotoAlbum" class="form-control" />
                <span asp-validation-for="FotoAlbum" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

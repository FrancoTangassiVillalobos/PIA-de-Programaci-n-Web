@model IEnumerable<Prueba002.Models.dbModels.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Albums</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Crear uno nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreAlbum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FotoAlbum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdArtistaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGeneroNavigation)
            </th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="tablaCRUD">
                <td id="nombmisterioso">
                @Html.DisplayFor(modelItem => item.NombreAlbum)
            </td>
                <td id="nombmisterioso">
                <img class="img-fluid w-50" src="@Html.DisplayFor(modelItem => item.FotoAlbum)" />
            </td>
                <td id="nombmisterioso">
                @Html.DisplayFor(modelItem => item.IdArtistaNavigation.IdArtista)
            </td>
                <td id="nombmisterioso">
                @Html.DisplayFor(modelItem => item.IdGeneroNavigation.IdGenero)
            </td>
                <td id="nombmisterioso2" class="d-inline-flex">
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.IdAlbum">Editar</a> <br />
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.IdAlbum">Detalles</a> <br />
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdAlbum">Eliminar</a><br />
            </td>
        </tr>
}
    </tbody>
</table>



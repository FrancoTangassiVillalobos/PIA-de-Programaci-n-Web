@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="container mt-5">
    <div class="text-center">
        <img src="https://via.placeholder.com/150" alt="Foto de Perfil" class="profile-img">
        <h2>@User.Identity?.Name</h2>
        <p></p>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between">
                <img src="https://via.placeholder.com/150" alt="Álbum 1" class="album m-4">
                <img src="https://via.placeholder.com/150" alt="Álbum 2" class="album m-4">
                <img src="https://via.placeholder.com/150" alt="Álbum 3" class="album m-4">
                <img src="https://via.placeholder.com/150" alt="Álbum 4" class="album m-4">
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Tus Listas</h3>
            <!-- Aquí puedes agregar tu contenido para las listas -->
            <button class="btn btn-primary mt-3">Agregar Lista</button>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Comentarios</h3>
            <div class="card comment-card">
                <div class="card-body">
                    <p>Comentario 1</p>
                </div>
            </div>
            <div class="card comment-card">
                <div class="card-body">
                    <p>Comentario 2</p>
                </div>
            </div>
            <!-- Puedes replicar este bloque para más comentarios -->
        </div>
    </div>
</div>
@section Css {
    <link href="~/css/perfil.css" rel="stylesheet" />
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
